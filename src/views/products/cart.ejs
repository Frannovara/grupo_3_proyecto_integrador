<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

<body>
    <div class="body-content">
        <%- include('../partials/header') %>
        <main>
            <section class="carrito-compras">
                

                <% if (typeof usersCart != 'undefined') { %>
                    <% if (usersCart != null) { %>
                     
                    <table class="cart-table">
                        <thead  class="productos-carrito-div">
                            <tr>
                                <th class="table-head"><h4>Producto/s</h4></th>
                                <th class="table-head"><h4>Precio unitario</h4></th>
                                <th class="table-head"><h4>Cantidad</h4></th>
                                <th class="table-head"><h4>Subtotal</h4></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% usersCart.item.forEach(product => { %>
                                <tr  class="productos-en-carrito">
                                    <td>
                                        <a class="motos-carrito" href="/products/<%= product.id %> ">
                                            <h5 ><%= product.name %> </h5>
                                        </a>
                                    </td>
                                    <td>
                                        <h5 class="precio-numeros">$ <%= toThousand(product.final_price) %> </h5>
                                    </td>
                                    <td>
                                        <div class="cantidad-carrito">
                                            <h5 class="amount"><%= product.Cart_product.units %> </h5>
                                            <div class="flechas-cantidad">
                                                <form action="/products/addOne/<%= product.id %> " method="post">
                                                    <button type="submit" class="boton-flechas-cantidad"><i class="fas fa-chevron-up"></i></button>
                                                </form>
                                                <form action="/products/removeOne/<%= product.id %> " method="post">
                                                    <button type="submit" class="boton-flechas-cantidad"><i class="fas fa-chevron-down"></i></button>
                                                </form>                                    
                                            </div>
                                         </div>
                                    </td>
                                    <td>
                                        <h5 class="subtotal-numeros">$<%= toThousand(product.Cart_product.subtotal) %> </h5>
                                    </td>
                                </tr>
                            <% }) %>    
                        </tbody>
                        <tfoot>
                            <tr  class="total-carrito">
                                <th class="table-footer">
                                    <h4 class="total-listado">Total</h4>
                                </th>
                                <th class="table-footer"></th>
                                <th class="table-footer"></th>
                                <th class="table-footer">
                                    <h5 class="total-numero">$<%= toThousand(total) %> </h5>
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                    
                    <div class="boton-compra-div">
                        <form action="/products/buyCart" method="post">
                            <button type="submit" class="boton-compra"><strong>COMPRAR</strong></button>
                        </form>
                    </div>
                    <% } else { %>
                        <h3 class="carrito-vacio">No has agregado productos al carrito de compras</h3>  
                    <% } %>
                <% } else { %>
                       <h3 class="carrito-vacio">No has agregado productos al carrito de compras</h3>  
                <% } %>                
            </section>
        </main>
    </div>
    <%- include('../partials/footer') %>
</body>

</html>