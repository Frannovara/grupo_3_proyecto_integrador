<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>
    <div class="body-content">
        <%- include('../partials/header') %>
        <section class="create-product">
            <h2>Crear un producto</h2>
            <form action="/products" method="POST" class="create-form" enctype="multipart/form-data">
                <div class="create-form-row">
                    <div class="create-form-column"> 
                        <div class="create-form-element">
                            <label for="name">Nombre del producto</label>
                            <input type="text" name="name" id="name" class="create-form-input">
                        </div>
                        <div class="create-form-element">
                            <label for="category">Categoría</label>
                            <select name="category" id="category" class="create-form-input">
                               <% categories.forEach(category => { %>
                                
                                 <option value="<%=category.id%>">
                                        <%=category.name%></option>
                                     
                                
                                 <% }) %>
                                
                            </select>
                        </div class="create-form-element">
                        <div class="create-form-element">
                            <label for="brand">Marca</label>
                            <select name="brand" id="brand" class="create-form-input">
                                <% brands.forEach(brand => { %>
                                
                                    <option value="<%=brand.id%>">
                                        <%=brand.name%></option>
                                       
                                   
                                    <% }) %>
                            </select>
                        </div>
                        <div class="create-form-element">
                            <label for="price">Precio</label>
                            <input type="number" class="create-form-input" name="price" id="price">
                        </div>
                        <div class="create-form-element">
                            <label for="discount">Descuento</label>
                            <input type="number" class="create-form-input" name="discount" type="discount">
                        </div>
                        <div class="create-form-element">
                            <label for="year">Año</label>
                            <input type="number" class="create-form-input" name="year" id="year">
                        </div>
                    </div>
                    <div class="create-form-column">
                        <div class="create-form-element">
                            <label for="description">Descripción:</label><br>
                            <textarea name="description" class="create-form-input" id="description" cols="30" rows="10"></textarea>
                        </div>
                        <div class="create-form-element">
                            <label for="image">Imagen</label>
                            <input type="file" name="image" id="image"  class="create-form-input" accept="images/*">
                        </div>
                        <div class="create-form-element">
                            <label for="color">Color</label>
                            <select name="color" id="color" class="create-form-input">
                                <% colors.forEach(color => { %>
                                
                                    <option value="<%=color.id%>">
                                        <%=color.name%></option>
                                       
                                   
                                    <% }) %>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="create-form-row">
                    <div class="create-form-button">
                        <button type="reset" class="boton-form">Borrar Campos</button>
                        <button type="submit" class="boton-form">Crear</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
    <%- include('../partials/footer') %>
    <script src="/js/createProduct.js"></script>
</body>
</html>