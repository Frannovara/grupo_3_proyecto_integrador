<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>
    <div class="body-content">
        <%- include('../partials/header') %>
        <section class="create-product">
            <h2>Crear un producto</h2>
            <form action="/products" method="POST" class="create-form">
                <div class="create-form-row">
                    <div class="create-form-column"> 
                        <div class="create-form-element">
                            <label for="name">Nombre del producto</label>
                            <input type="text" name="name" id="name" class="create-form-input">
                        </div>
                        <div class="create-form-element">
                            <label for="category">Categoría</label>
                            <select name="category" id="category" class="create-form-input">
                                <option value="0">Seleccionar</option>
                                <option value="1">Motocross</option>
                                <option value="2">Chopera</option>
                                <option value="3">Scooter</option>
                            </select>
                        </div class="create-form-element">
                        <div class="create-form-element">
                            <label for="brand">Marca</label>
                            <select name="brand" id="brand" class="create-form-input">
                                <option value="0">Seleccionar</option>
                                <option value="1">Suzuki</option>
                                <option value="2">Motomel</option>
                                <option value="3">Honda</option>
                            </select>
                        </div>
                        <div class="create-form-element">
                            <label for="price">Precio</label>
                            <input type="number" class="create-form-input">
                        </div>
                        <div class="create-form-element">
                            <label for="discount">Descuento</label>
                            <input type="number" class="create-form-input">
                        </div>
                        <div class="create-form-element">
                            <label for="year">Año</label>
                            <input type="number" class="create-form-input">
                        </div>
                    </div>
                    <div class="create-form-column">
                        <div class="create-form-element">
                            <label for="description">Descripción:</label><br>
                            <textarea name="description" class="create-form-input" id="description" cols="30" rows="10"></textarea>
                        </div>
                        <div class="create-form-element">
                            <label for="image">Imagen</label>
                            <input type="file" name="image" id="image"  class="create-form-input">
                        </div>
                        <div class="create-form-element">
                            <label for="kms">Estado</label>
                            <select name="kms" id="kms"  class="create-form-input">
                                <option value="0">Seleccionar</option>
                                <option value="1">Okm</option>
                                <option value="2">Usada</option>
                            </select>
                        </div>
                        <div class="create-form-element">
                            <label for="color">Color</label>
                            <input type="text" class="create-form-input">
                        </div>
                    </div>
                </div>
                <div class="create-form-row">
                    <div class="create-form-button">
                        <button type="reset" class="boton-form">Borrar</button>
                        <button type="submit" class="boton-form">Crear</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
    <%- include('../partials/footer') %>
</body>
</html>