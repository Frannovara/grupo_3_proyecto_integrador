<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>
    <div class="body-content">
        <%- include('../partials/header') %>
        <section class="create-product">
            <h2>Editar producto <%= productToEdit.name %> </h2>
            <form action="/product/detail/<%= productToEdit.id %>/?_method=PUT" method="post" class="create-form">
                <div class="create-form-element">
                    <label for="name">Nombre del producto</label>
                    <input type="text" name="name" id="name" placeholder="<%= productToEdit.name %> ">
                </div>
                <div class="create-form-element">
                    <label for="description">Descripción:</label><br>
                    <textarea name="description" id="description" cols="30" rows="10" placeholder="<%= productToEdit.description %> " ></textarea>
                </div>
                <div class="create-form-element">
                    <label for="image">Imagen</label>
                    <input type="file" name="image" id="image" >
                </div>
                <div class="create-form-element">
                    <label for="category">Categoría</label>
                    <select name="category" id="category">
                        <option value="0">Seleccionar</option>
                        <option value="1">Motocross</option>
                        <option value="2">Chopera</option>
                        <option value="3">Scooter</option>
                        <option value="4">Naked</option>

                    </select>
                </div class="create-form-element">
                <div class="create-form-element">
                    <label for="brand">Marca</label>
                    <select name="brand" id="brand">
                        <option value="0">Seleccionar</option>
                        <option value="1">Suzuki</option>
                        <option value="2">Motomel</option>
                        <option value="3">Honda</option>
                        <option value="4">Benlli</option>
                        <option value="4">Yamaha</option>
                    </select>
                </div>
                <div class="create-form-element">
                    <label for="price">Precio</label>
                    <input type="number" placeholder="<%= productToEdit.price %> ">
                </div>
                <div class="create-form-element">
                    <label for="discount">Descuento</label>
                    <input type="number" placeholder="<%= productToEdit.discount %> ">
                </div>
                <div class="create-form-element">
                    <label for="year">Año</label>
                    <input type="number" placeholder="<%= productToEdit.year %> ">
                </div>
                <div class="create-form-element">
                    <label for="kms">Estado</label>
                    <select name="kms" id="kms" placeholder="<%= productToEdit.kms %> ">
                        <option value="0">Seleccionar</option>
                        <option value="1">Okm</option>
                        <option value="2">Usada</option>
                    </select>
                </div>
                <div class="create-form-element">
                    <label for="color">Color</label>
                    <input type="number" placeholder="<%= productToEdit.color %> ">
                </div>
                <div class="create-form-button">
                    <button type="reset" class="boton-form">Borrar</button>
                    <button type="submit" class="boton-form">Editar</button>
                </div>
            </form>
        </section>
    </div>
    <%- include ('../partials/footer') %>
</body>
</html>