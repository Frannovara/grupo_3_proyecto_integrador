<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>
    <div class="body-content">
        <%- include('../partials/header') %>
        <section class="create-product">
            <h2>Editar producto <%= productToEdit.name %> </h2>
            <form action="/products/detail/<%= productToEdit.id %>/?_method=PUT" method="post" class="create-form" enctype="multipart/form-data">
                <div class="create-form-row">
                    <div class="create-form-column">
                        <div class="create-form-element">
                            <label for="name">Nombre del producto</label>
                            <input type="text" name="name" id="name" class="create-form-input" value="<%= productToEdit.name %>">
                        </div>
                        <div class="create-form-element">
                            <label for="category">Categoría</label>
                            <select name="category" id="category" class="create-form-input">
                                <option value="A">Seleccione una categoría</option>
                                <% categories.forEach(category => { %>
                                    <% if (category.id == productToEdit.category_id) { %>
                                        <option value="<%=category.id%>" selected><%=category.name%></option>
                                    <% } else { %>
                                        <option value="<%=category.id%>"><%=category.name%></option>
                                    <% } %>
                                
                                <% }) %>
                            </select>
                        </div class="create-form-element">
                        <div class="create-form-element">
                            <label for="brand">Marca</label>
                            <select name="brand" id="brand" class="create-form-input">
                                <option value="A">Seleccione una marca</option>
                                <% brands.forEach(brand => { %>
                                    <% if (brand.id == productToEdit.brand_id) { %>
                                        <option value="<%=brand.id%>" selected><%=brand.name%></option>
                                    <% } else { %>
                                            <option value="<%=brand.id%>"><%=brand.name%></option>
                                    <% } %>
                                <% }) %>
                            </select>
                        </div>
                        <div class="create-form-element">
                            <label for="price">Precio</label>
                            <input type="number" class="create-form-input" name="price" id="price" value="<%= productToEdit.base_price %>">
                        </div>
                        <div class="create-form-element">
                            <label for="discount">Descuento</label>
                            <input type="number" class="create-form-input" name="discount" id="discount" value="<%= productToEdit.discount %>">
                        </div>
                        <div class="create-form-element">
                            <label for="year">Año</label>
                            <input type="number" class="create-form-input" name="year" id="year" value="<%= productToEdit.year %>">
                        </div>
                    </div>
                    <div class="create-form-column">
                        <div class="create-form-element">
                            <label for="description">Descripción:</label><br>
                            <textarea name="description" class="create-form-input" id="description" cols="30" rows="10"><%= productToEdit.description %> </textarea>
                        </div>
                        <div class="create-form-element">
                            <label for="image">Imagen</label>
                            <input type="file" name="image" id="image"  class="create-form-input" accept="images/*">
                        </div>
                        <div class="create-form-element">   
                            <label for="color">Color</label>
                            <select name="color" id="color" class="create-form-input">
                                <option value="A">Seleccione un color</option>
                                <% colors.forEach(color => { %>
                                    <% if (productColors.includes(color.id)) { %>
                                        <option value="<%=color.id%>"> <%=color.name%> </option>
                                    <% } %>
                                <% }) %>
                            </select>
                            <input type="text" name="color" id="color" value="<%= productToEdit.color %>" class="create-form-input">
                        </div>
                    </div>
                </div>
                <div class="create-form-row">
                    <div class="create-form-button">
                        <button type="reset" class="boton-form">Borrar Campos</button>
                        <button type="submit" class="boton-form">Editar</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
    <%- include('../partials/footer') %>
</body>
</html>