<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %>
<body>
    <div class="body-content">
        <%- include('partials/header') %>
        <section class="contact-section">
            <h2>Dejanos tu consulta</h2>

            <% if (typeof mensaje != 'undefined') { %>
                <h4 class="consulta-enviada"><%= mensaje %> </h4>
            <% } %>
            
            <form class="contact-form" action="/contact/send" method="post">
                <div>
                    <input class="contact-form-input" type="text" name="name" id="name" placeholder="Nombre y Apellido">
                </div>
                <div>
                    <input class="contact-form-input" type="email" name="email" id="email" placeholder="Email:">
                </div><div>
                    <textarea class="contact-form-input" name="message" id="message" cols="30" rows="6" placeholder="Mensaje:"></textarea>
                </div>
                <div>
                    <button class="contact-form-boton" type="submit" name="submit" id="submit" type="submit">Enviar</button>
                    <button class="contact-form-boton" type="reset" name="reset" id="reset" type="reset">Borrar campos</button>
                </div>
            </form>
        </section>
    </div>
    <%- include('partials/footer') %>
</body>
</html>