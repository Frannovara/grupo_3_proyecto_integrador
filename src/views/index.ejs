<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs') %>
    <body>
        <div class="body-content">
            <%- include('partials/header') %>

            <div id="image-slider" class="splide">
                <div class="splide__track">
                    <ul class="splide__list">
                        <li class="splide__slide">
                            <img class="div-imagen-home" src="/images/imagen-banner-homepage.jpg" alt="img-home">
                        </li>
                        <li class="splide__slide">
                            <img class="div-imagen-home" src="/images/imagen-banner-payments.jpg" alt="img-payment">
                        </li>
                    </ul>
                </div>
            </div>

            <div class="listado-categorias">
                <h4><a class="listado-categorias-link" href="http://localhost:3001/products/?search=all&buscador=">Todos los productos</a></h4>
            </div>

            <% if (typeof lastViews != 'undefined') { %>
                <div class="div-ofertas">
                    <h3>TUS ÃšLTIMAS VISITAS</h3> 
                            
                </div>
                <div class="div-articulos">
                    <section class="section1">
                        <% lastViews[0].forEach(product => { %>
                            <article class="article-home" >
                                <a href="/products/<%= product.product_id %> " class="product-detail"> 
                                    <div class="div-img1">
                                        <img class="img1" src= "/images/products/<%= product.image %>"  alt= "<%= product.name %>"  >
                                    </div>
                                    <p class="p-home">  <%= product.name %> <br>
                                    $<%= toThousand(product.final_price) %> - <%= product.year %> </p>
                                </a>
                            </article>
                        <% }) %>                    
                    </section>
                </div> 
            <% } %>
             

            <div class="div-ofertas">
                <h3>OFERTAS</h3> 
                        
            </div>
            <div class="div-articulos">
                <section class="section1">
                    <% productsInSale.forEach(product => { %>
                        <article class="article-home" >
                            <a href="/products/<%= product.id %> " class="product-detail"> 
                                <div class="div-img1">
                                    <img class="img1" src= "/images/products/<%= product.colors[0].Images.image %>"  alt= "<%= product.name %>"  >
                                </div>
                                <p class="p-home">  <%= product.name %> <br>
                                    $<%= toThousand(product.final_price) %> - <%= product.year %> </p>
                            </a>
                        </article>
                    <% }) %>                    
                </section>
            </div>  
            <script src="/js/productList.js"></script>
            <script>
                new Splide( '.splide', {
                    type    : 'loop',
                    perPage : 1,
                    autoplay: true,
                } ).mount();
            </script>
        </div>
        <%- include('partials/footer') %>
    </body>
</html>