<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

<body>
    <div class="body-content">
        <%- include('../partials/header') %>
        <main class="register-form">
            <h1 class="titulo-seccion">Registro</h1>
            <form action="/users/register" method="POST">
                <div class="register-form-fields">
                    <div class="div-campo-datos">
                        <label for="name">Nombre</label>
                        <div class="campo-datos">
                            <i class="fas fa-user"></i>
                            <input type="text" name="first_name" id="first_name" class="campo-datos-type"
                                value="<%= registerData.first_name %>">
                        </div>
                        <div class="register-errors">
                            <p>
                                <%=typeof errors.first_name != 'undefined' ?  errors.first_name.msg : ''%>
                            </p>
                        </div>
                    </div>
                    <div class="div-campo-datos">
                        <label for="name">Apellido</label>
                        <div class="campo-datos">
                            <i class="fas fa-user"></i>
                            <input type="text" name="last_name" id="last_name" class="campo-datos-type"
                                value="<%= registerData.last_name %>">
                        </div>
                        <div class="register-errors">
                            <p>
                                <%=typeof errors.last_name != 'undefined' ?  errors.last_name.msg : ''%>
                            </p>
                        </div>
                    </div>
                    <div class="div-campo-datos">
                        <label for="email">E-mail</label>
                        <div class="campo-datos">
                            <i class="fas fa-envelope"></i>
                            <input type="email" name="email" id="email" class="campo-datos-type"
                                value="<%= registerData.email %>">
                        </div>
                        <div class="register-errors">
                            <p>
                                <%=typeof errors.email != 'undefined' ?  errors.email.msg : ''%>
                            </p>
                        </div>
                    </div>
                    <div class="div-campo-datos">
                        <label for="password">Contraseña</label>
                        <div class="campo-datos">
                            <i class="fas fa-lock"></i>
                            <input type="password" name="password" id="password" class="campo-datos-type">
                            <span class="viewPass"><i class="fas fa-eye"></i></span>
                        </div>
                        <div class="register-errors">
                            <p>
                                <%=typeof errors.password != 'undefined' ?  errors.password.msg : ''%>
                            </p>
                        </div>
                    </div>
                    <div class="div-campo-datos">
                        <label for="re-password">Repita la contraseña</label>
                        <div class="campo-datos">
                            <i class="fas fa-lock"></i>
                            <input type="password" name="re_password" id="re_password" class="campo-datos-type">
                            <span class="viewRePass"><i class="fas fa-eye"></i></span>
                        </div>
                        <div class="register-errors">
                            <p>
                                <%=typeof errors.re_password != 'undefined' ?  errors.re_password.msg : ''%>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="register-form-terms">
                    <input type="checkbox" name="terms" id="terms" class="register-form-terms-checkbox" required>
                    <label for="terms">Acepto los términos y Condiciones</label>
                </div>
                <button type="submit" class="register-form-button">Registrarse</button>
            </form>
            <div class="register-errors">
                <% if (typeof repitedUser != 'undefined') { %>
                <strong>
                    <p><%= "El email " + repitedUser + " ya se encuentra en uso" %></p>
                </strong>
                <% } %>

            </div>
            <div>
                <!-- <div class="register-form-button"><i class="fab fa-google-plus-g"></i>   Ingresá con Google</div>
                <div class="register-form-button"><i class="fab fa-facebook-f"></i>   Ingresá con Facebook</div> -->
            </div>
        </main>
    </div>
    <%- include('../partials/footer') %>
    <script src="/js/viewPass.js"></script>
</body>

</html>